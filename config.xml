<?xml version='1.0' encoding='utf-8'?>
<widget id="ch.heg.perfview" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Perf View</name>
    <description>
        Apache Cordova application Perf View
    </description>
    <author email="mohamedelech@gmail.com" href="http://cordova.io">
        Mohamed El Ech
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-compat" spec="1" />
    <plugin name="cordova-plugin-geolocation" spec="1" />
    <plugin name="cordova-plugin-camera" spec="1" />
    <plugin name="cordova-sqlite-plugin" spec="1" />
    <plugin name="cordova-plugin-device-orientation" spec="1" />
    <plugin name="cordova-plugin-nativeaudio" spec="1" />
    <plugin name="cordova-plugin-contacts" spec="1" />
    <plugin name="cordova-plugin-device-motion" spec="1" />
    <plugin name="cordova-plugin-x-socialsharing" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
